@{
    @model MyMvcApp.Models.Product

    <h2>Delete Product</h2>

    <p>Are you sure?</p>

    <p>@Model.Name - @Model.Price</p>

    <form method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit">Yes, Delete</button>
    </form>

    <a href="/Products">Cancel</a>

}
