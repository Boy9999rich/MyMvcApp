@{
    @model List<MyMvcApp.Models.Product>

    <h2>Products</h2>

    <a href="/Products/Create">Create New</a>

    <table border="1">
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>
                    <a href="/Products/Details/@item.Id">Details</a> |
                    <a href="/Products/Edit/@item.Id">Edit</a> |
                    <a href="/Products/Delete/@item.Id">Delete</a>
                </td>
            </tr>
        }
    </table>


}
